    ///VIM
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.sneak": false, // Better "f"
    "vim.camelCaseMotion.enable": true,
    "vim.surround": true, //work with brackets around text
    "vim.easymotion": true, //Vim in Vim
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-s>": false,
        "<C-z>": false,
        "<C-p>": false,
        "<C-b>": true,
        "<C-/>": false
    },
    "vim.leader": " ",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "a": ["<Esc>"]
        },
        {
            "before": ["k", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["<C-N>"],
            "after": ["workbench.action.files.newUntitledFile"]
        },
        {
            "before": ["<Esc>"],
            "commands": [":nohl"]
        },
        {
            "before": ["<C-h>"],
            "commands": ["editor.action.startFindReplaceAction"]
        },
        {
            "before": ["<leader>", "e"],
            "commands": ["workbench.view.explorer"]
        },
        {
            "before": ["<leader>", "k"],
            "after": ["<leader>", "<leader>", "k"]
        },
        {
            "before": ["<leader>", "j"],
            "after": ["<leader>", "<leader>", "j"]
        },
        {
            "before": ["<leader>", "l"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": ["<leader>", "h"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["<leader>", "m"],
            "commands": [":marks"]
        },
        {
            "before": ["<leader>", "s"],
            "after": ["<leader>", "<leader>", "s"]
        },
        {
            "before": ["<leader>", "_"],
            "commands": ["workbench.action.splitEditorDown"]
        },
        {
            "before": ["<leader>", "|"],
            "commands": ["workbench.action.splitEditorRight"]
        },
        {
            "before": ["<C-Space>", "j"],
            "commands": ["editor.action.copyLinesDownAction"]
        },
        {
            "before": ["<C-Space>", "k"],
            "commands": ["editor.action.copyLinesUpAction"]
        },
        {
            "before": ["<C-Space>", "b"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        {
            "before": ["<C-Space>", "<C-b>"],
            "commands": ["workbench.action.toggleAuxiliarybar"]
        },
        {
            "before": ["<C-Space>", "w"],
            "commands": ["workbench.action.closeActiveEditor"]
        },

        {
            "before": ["<Leader>", "]"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        {
            "before": ["<Leader>", "["],
            "commands": ["editor.action.moveLinesUpAction"]
        },
        {
            "before": ["<C-Space>", "c"],
            "after": ["g", "g", "V", "G", "y"]
        },
        {
            "before": ["<C-Space>", "a"],
            "after": ["g", "g", "V", "G"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "w"],
            "after": ["<leader>", "<leader>", "w"]
        },
        {
            "before": ["f"],
            "after": ["<leader>", "<leader>", "<leader>", "j"]
        },
        {
            "before": ["<C-Space>", "s"],
            "commands": ["workbench.action.files.save"]
        },

        {
            "before": ["<leader>", "/"],
            "after": ["<leader>", "<leader>", "/"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["<leader>", "k"],
            "after": ["<leader>", "<leader>", "k"]
        },
        {
            "before": ["<leader>", "j"],
            "after": ["<leader>", "<leader>", "j"]
        },
        {
            "before": ["f"],
            "after": ["<leader>", "<leader>", "<leader>", "j"]
        },
        {
            "before": ["<C-h>"],
            "commands": ["editor.action.startFindReplaceAction"]
        },
        {
            "before": ["<C-f>"],
            "commands": ["actions.findWithSelection"]
        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        }
    ],
    "vim.operatorPendingModeKeyBindings": [
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["H"],
            "after": ["^"]
        }
    ],
    "diffEditor.hideUnchangedRegions.enabled": true,
