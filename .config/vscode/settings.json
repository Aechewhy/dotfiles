    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "debug.openDebug": "openOnDebugBreak",
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorSurroundingLines": 5,
    "editor.cursorWidth": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.fontFamily": "\"JetBrainsMono Nerd Font\", \"FiraCode Nerd Font\", \"Cascadia Code\", monospace",
    "editor.fontLigatures": false,
    "editor.fontSize": 17,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.lineNumbers": "relative",
    "editor.tabCompletion": "off",
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
    //Some font names
    //JetBrains Mono
    //CaskaydiaCove Nerd Font
    //FiraCode Nerd Font
    //Cascadia Code
    "editor.wordWrap": "on",
    "errorLens.enabledDiagnosticLevels": ["error", "warning", "info", "hint"],
    "errorLens.gutterEmoji": {
        "info": "ℹ️",
        "warning": "⚠️"
    },
    "explorer.confirmDragAndDrop": false,
    "explorer.fileNesting.enabled": true,
    "files.defaultLanguage": "",
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "always",
    //INDENT-RAINBOW
    "indentRainbow.colors": [
        "rgba(255,0,255,0.15)", // Purple
        "rgba(0,255,0,0.15)", // Red
        "rgba(0,0,255,0.15)" // Green
    ],
    "indentRainbow.errorColor": "rgba(255,0,0,1)",
    "indentRainbow.indicatorStyle": "light",
    "indentRainbow.lightIndicatorStyleLineWidth": 3,

    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": ["latexmk"]
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": ["latexmk_rconly"]
        },
        {
            "name": "latexmk (lualatex)",
            "tools": ["lualatexmk"]
        },
        {
            "name": "latexmk (xelatex)",
            "tools": ["xelatexmk"]
        },
        {
            "name": "pdflatex -> bibtex -> pdflatex * 2",
            "tools": ["pdflatex", "bibtex", "pdflatex", "pdflatex"]
        },
        {
            "name": "Compile Rnw files",
            "tools": ["rnw2tex", "latexmk"]
        },
        {
            "name": "Compile Jnw files",
            "tools": ["jnw2tex", "latexmk"]
        },
        {
            "name": "Compile Pnw files",
            "tools": ["pnw2tex", "latexmk"]
        },
        {
            "name": "tectonic",
            "tools": ["tectonic"]
        }
    ],
    "latex-workshop.latex.toolchain": [
        {
            "args": ["-interaction=nonstopmode", "-synctex=1", "%DOC%"],
            "command": "pdflatex",
            "name": "pdflatex"
        }
    ],
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,
    "markdown.extension.extraLangIds": [],
    "material-icon-theme.folders.theme": "specific",
    "powershell.buttons.showPanelMovementButtons": false,
